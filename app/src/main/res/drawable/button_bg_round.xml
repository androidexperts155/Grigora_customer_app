<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval" >
            <stroke android:width="@dimen/_1sdp" android:color="?attr/textWhite" />
            <solid android:color="?attr/chipDeSelected" />
            <size android:width="@dimen/_150sdp" android:height="@dimen/_150sdp" />
        </shape>
    </item>
    
    <item android:state_pressed="true">
        <shape android:shape="oval" >
            <stroke android:width="@dimen/_1sdp" android:color="?attr/textWhite" />
            <solid android:color="@color/seprator" />
            <size android:width="@dimen/_150sdp" android:height="@dimen/_150sdp" />
        </shape>
    </item>
</selector>