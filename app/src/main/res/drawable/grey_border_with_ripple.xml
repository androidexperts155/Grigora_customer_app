<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/state_pressed_color"
    android:radius="@dimen/_8sdp">
    
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="?attr/searchBorder" />
            <corners android:radius="@dimen/_8sdp" />
        </shape>
    </item>
    
    
    <item android:id="@android:id/background">
        
        <shape android:shape="rectangle">
            <solid android:color="?attr/searchBg"></solid>
            <corners android:radius="@dimen/_8sdp"></corners>
            <stroke
                android:width="1dp"
                android:color="?attr/searchBorder" />
        </shape>
    </item>
</ripple>