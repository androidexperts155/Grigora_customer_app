<resources>
    
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>


    </style>
    
    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/background</item>
    </style>
    
    
    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:numStars">5</item>
        <item name="android:tint">@color/white</item>
        <item name="android:colorForeground">@color/duskYellow</item>
        <item name="colorControlNormal">@color/def_rate</item>
        <item name="colorControlActivated">@color/duskYellow</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:isIndicator">true</item>
    </style>
    
    
    <style name="RatingBarToRate" parent="Widget.AppCompat.RatingBar">
        <item name="android:numStars">5</item>
        <item name="colorControlNormal">@color/def_rate</item>
     
        <item name="colorControlActivated">@color/duskYellow</item>
        <item name="android:stepSize">0.5</item>
    </style>
    
    <style name="RatingBarToRateSmall" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:numStars">5</item>
        <item name="android:isIndicator">false</item>
        <item name="colorControlNormal">@color/def_rate</item>
        <item name="colorControlActivated">@color/duskYellow</item>
        <item name="android:stepSize">0.5</item>
    </style>
    
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    
    <style name="title">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
    
    <style name="normalText">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>


</resources>
