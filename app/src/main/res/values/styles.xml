<resources>
    
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:editTextColor">@color/textBlack</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="backgroundColor">@color/background_light</item>
    </style>
    
    <style name="PaymentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        
        <item name="android:textColorPrimary">@color/dark_gray</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
    
    
     
    
    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/ripple</item>
    </style>
    
    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    
    <style name="AppTheme.Light" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/background_light</item>
        
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="backgroundColor">@color/background_light</item>
        <item name="lightGray">@color/lightGrey</item>
        <item name="textWhite">@color/textBlack</item>
        <item name="textGray">@color/textGrey</item>
        <item name="langSelected">@color/textBlack</item>
        <item name="langDeselected">@color/white</item>
        <item name="langBorder">@color/textBlack</item>
        <item name="searchHint">@color/text_hint_color</item>
        <item name="searchBg">@color/white</item>
        <item name="searchBorder">@color/seprator</item>
        
        <item name="filterChipSelected">@color/colorPrimaryDark</item>
        <item name="filterChipSelectedTextColor">@color/white</item>
        <item name="filterChipDeSelected">@color/background_light_grey</item>
        <item name="filterChipDeSelectedTextColor">@color/textBlack</item>
        
        <item name="offer_bg_border">@android:color/transparent</item>
        <item name="top_brand_border">@color/background_light_grey</item>
        
        
        <item name="chipDeSelected">@color/white</item>
        <item name="chipDeSelectedTextColor">@color/text_hint_color</item>
        
        <item name="viewbg">@color/viewbg_light</item>
        
        <item name="answer_selected">@color/white</item>
        <item name="answer_de_selected">@color/viewbg_light</item>
        
        <item name="light_bg">#f8f8f8</item>
    
    </style>
    
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        
        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="backgroundColor">@color/background_dark</item>
        <item name="lightGray">@color/lightGrey</item>
        <item name="textWhite">@color/white</item>
        <item name="textGray">@color/lightGrey</item>
        <item name="langSelected">@color/background_dark_light</item>
        <item name="langDeselected">@android:color/transparent</item>
        <item name="langBorder">@color/lightGrey</item>
        <item name="searchHint">@color/lightGrey</item>
        <item name="searchBg">@color/background_dark_light</item>
        <item name="searchBorder">@android:color/transparent</item>
        
        <item name="filterChipSelected">@color/colorPrimaryDark</item>
        <item name="filterChipSelectedTextColor">@color/white</item>
        <item name="filterChipDeSelected">@color/background_dark_light</item>
        <item name="filterChipDeSelectedTextColor">@color/white</item>
        
        <item name="offer_bg_border">@color/white</item>
        <item name="top_brand_border">@color/background_light_grey</item>
        
        
        <item name="chipDeSelected">@color/background_dark_light</item>
        <item name="chipDeSelectedTextColor">@color/lightGrey</item>
        <item name="viewbg">@color/viewbg_dark</item>
        
        <item name="answer_selected">@color/background_dark_light</item>
        <item name="answer_de_selected">@color/background_dark_light</item>
        <item name="light_bg">@color/viewbg_dark</item>
    
    </style>
    
    
    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:numStars">5</item>
        <item name="android:tint">@color/white</item>
        <item name="android:colorForeground">@color/duskYellow</item>
        <item name="colorControlNormal">@color/def_rate</item>
        <item name="colorControlActivated">@color/duskYellow</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:isIndicator">true</item>
    </style>
    
    
    <style name="RatingBarToRate" parent="Widget.AppCompat.RatingBar">
        <item name="android:numStars">5</item>
        <item name="colorControlNormal">@color/def_rate</item>
        
        <item name="colorControlActivated">@color/duskYellow</item>
        <item name="android:stepSize">0.5</item>
    </style>
    
    <style name="RatingBarToRateSmall" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:numStars">5</item>
        <item name="android:isIndicator">false</item>
        <item name="colorControlNormal">@color/def_rate</item>
        <item name="colorControlActivated">@color/duskYellow</item>
        <item name="android:stepSize">0.5</item>
    </style>
    
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    
    <style name="mediumText">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>
    
    <style name="normalText">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>
    
    <style name="titleText">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>
    
    <style name="boldText">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>
    
    
    <style name="MyBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MYBottomSheetStyle</item>
    </style>
    
    <style name="MYBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>


