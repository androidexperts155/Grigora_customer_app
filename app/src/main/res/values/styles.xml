<resources>
    
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="backgroundColor">@color/background_light</item>
    
    </style>
    
    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/background</item>
    </style>
    
    
    <style name="AppTheme.Light" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="backgroundColor">@color/background_light</item>
        <item name="lightGray">@color/lightGrey</item>
        <item name="textWhite">@color/textBlack</item>
        <item name="textGray">@color/textGrey</item>
        <item name="langSelected">@color/textBlack</item>
        <item name="langDeselected">@color/white</item>
        <item name="langBorder">@color/textBlack</item>
        <item name="searchHint">@color/textGrey</item>
        <item name="searchBg">@color/white</item>
        <item name="searchBorder">@color/textGrey</item>
        
        <item name="filterChipSelected">@color/colorPrimaryDark</item>
        <item name="filterChipSelectedTextColor">@color/white</item>
        <item name="filterChipDeSelected">@color/background_light_grey</item>
        <item name="filterChipDeSelectedTextColor">@color/textBlack</item>
     
        <item name="offer_bg_border">@android:color/transparent</item>
    
    
    </style>
    
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="backgroundColor">@color/background_dark</item>
        <item name="lightGray">@color/lightGrey</item>
        <item name="textWhite">@color/white</item>
        <item name="textGray">@color/lightGrey</item>
        <item name="langSelected">@color/background_dark_light</item>
        <item name="langDeselected">@android:color/transparent</item>
        <item name="langBorder">@color/lightGrey</item>
        <item name="searchHint">@color/lightGrey</item>
        <item name="searchBg">@color/background_dark_light</item>
        <item name="searchBorder">@android:color/transparent</item>
        
        <item name="filterChipSelected">@color/colorPrimaryDark</item>
        <item name="filterChipSelectedTextColor">@color/white</item>
        <item name="filterChipDeSelected">@color/background_dark_light</item>
        <item name="filterChipDeSelectedTextColor">@color/white</item>
        
        <item name="offer_bg_border">@color/white</item>
    
    </style>
    
    
    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:numStars">5</item>
        <item name="android:tint">@color/white</item>
        <item name="android:colorForeground">@color/duskYellow</item>
        <item name="colorControlNormal">@color/def_rate</item>
        <item name="colorControlActivated">@color/duskYellow</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:isIndicator">true</item>
    </style>
    
    
    <style name="RatingBarToRate" parent="Widget.AppCompat.RatingBar">
        <item name="android:numStars">5</item>
        <item name="colorControlNormal">@color/def_rate</item>
        
        <item name="colorControlActivated">@color/duskYellow</item>
        <item name="android:stepSize">0.5</item>
    </style>
    
    <style name="RatingBarToRateSmall" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:numStars">5</item>
        <item name="android:isIndicator">false</item>
        <item name="colorControlNormal">@color/def_rate</item>
        <item name="colorControlActivated">@color/duskYellow</item>
        <item name="android:stepSize">0.5</item>
    </style>
    
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    
    <style name="title">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
    
    <style name="normalText">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>


</resources>
