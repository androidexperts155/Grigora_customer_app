<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/parentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <fragment
            android:id="@+id/mMap"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        
        <RelativeLayout
            android:id="@+id/li_bottomsheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:background="@drawable/rating_filter_bg"
            app:behavior_hideable="true"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
            
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:orientation="horizontal">
                            
                            <com.github.siyamed.shapeimageview.RoundedImageView
                                android:id="@+id/img_rest"
                                
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/restaurant"
                                app:siRadius="@dimen/_8sdp" />
                            
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_6sdp"
                                android:gravity="center_vertical"
                                android:orientation="vertical">
                                
                                <TextView
                                    android:id="@+id/tv_rest_name"
                                    style="@style/titleText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="?attr/textWhite"
                                    android:textSize="@dimen/_13sdp"
                                    tools:text="Restaurant name" />
                                
                                <TextView
                                    android:id="@+id/tv_rest_desc"
                                    style="@style/mediumText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:ellipsize="end"
                                    android:maxWidth="@dimen/_150sdp"
                                    android:maxLines="2"
                                    android:textColor="?attr/textGray"
                                    android:textSize="@dimen/_10sdp"
                                    tools:text=" Restaurant Detail Here" />
                            </LinearLayout>
                        
                        </LinearLayout>
                        
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/_16sdp"
                            android:layout_marginRight="@dimen/_12sdp"
                            android:gravity="end"
                            android:orientation="vertical">
                            
                            <TextView
                                android:id="@+id/tv_status"
                                style="@style/mediumText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/textWhite"
                                android:textSize="@dimen/_10sdp"
                                android:visibility="gone" />
                            
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                
                                <TextView
                                    android:id="@+id/tv_est_delivery"
                                    style="@style/mediumText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:text=""
                                    android:textColor="?attr/textWhite"
                                    android:textSize="@dimen/_16sdp"
                                    android:visibility="visible" />
                            
                            
                            </LinearLayout>
                            
                            <LinearLayout
                                
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                
                                <TextView
                                    style="@style/mediumText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/order"
                                    android:textColor="?attr/textWhite"
                                    android:textSize="@dimen/_12sdp" />
                                
                                <TextView
                                    android:id="@+id/tv_order_id"
                                    style="@style/mediumText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    android:text="#"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/_12sdp" />
                            </LinearLayout>
                        
                        
                        </LinearLayout>
                    
                    
                    </RelativeLayout>
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="?attr/viewbg" />
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        
                        <androidx.cardview.widget.CardView
                            
                            android:id="@+id/bt_cancel"
                            android:layout_width="wrap_content"
                            
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:elevation="@dimen/_1sdp"
                            app:cardBackgroundColor="?attr/backgroundColor"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:cardCornerRadius="@dimen/_18sdp"
                            android:visibility="visible">
                            
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:paddingLeft="@dimen/_12sdp"
                                android:paddingRight="@dimen/_12sdp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">
                                
                                <TextView
                                    style="@style/mediumText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/order_cancel"
                                    android:textColor="?attr/textWhite"
                                    android:textSize="@dimen/_11sdp" />
                                
                                <ImageView
                                    android:layout_width="@dimen/_8sdp"
                                    android:layout_height="@dimen/_8sdp"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    app:srcCompat="@drawable/ic_close" />
                            </LinearLayout>
                        
                        </androidx.cardview.widget.CardView>
                        
                        <LinearLayout
                            android:id="@+id/li_driver"
                            android:layout_width="wrap_content"
                            
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:background="@drawable/shadow28_gradient"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:visibility="gone">
                            
                            <com.github.siyamed.shapeimageview.RoundedImageView
                                android:id="@+id/img_driver"
                                android:layout_width="@dimen/_25sdp"
                                
                                android:layout_height="@dimen/_25sdp"
                                android:src="@drawable/ic_user"
                                app:siBorderColor="@color/state_pressed_color"
                                app:siBorderWidth="@dimen/_2sdp"
                                app:siRadius="@dimen/_10sdp" />
                            
                            <TextView
                                android:id="@+id/tv_driver_name"
                                
                                style="@style/mediumText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_6sdp"
                                android:maxLines="2"
                                
                                android:text="Driver Name"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11sdp" />
                            
                            <ImageView
                                android:id="@+id/img_call"
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_marginLeft="@dimen/_6sdp"
                                app:srcCompat="@drawable/ic_local_phone_black" />
                        
                        </LinearLayout>
                    
                    </LinearLayout>
                    
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal"
                        
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_8sdp">
                        
                        <ImageView
                            android:id="@+id/img_1"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/_8sdp"
                            app:srcCompat="@drawable/ic_stopwatch" />
                        
                        <TextView
                            style="@style/mediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/request_sent"
                            android:textColor="?attr/textWhite"
                            android:textSize="@dimen/_12sdp" />
                    
                    
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_8sdp">
                        
                        <ImageView
                            android:id="@+id/img_2"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/_8sdp"
                            app:srcCompat="@drawable/ic_tick_mark_grey" />
                        
                        <TextView
                            android:id="@+id/tv_2"
                            style="@style/mediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/order_accepted"
                            android:textColor="?attr/textWhite"
                            android:textSize="@dimen/_12sdp" />
                    
                    
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_8sdp">
                        
                        <ImageView
                            android:id="@+id/img_3"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/_8sdp"
                            app:srcCompat="@drawable/ic_cooking_grey" />
                        
                        <TextView
                            android:id="@+id/tv_3"
                            style="@style/mediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            
                            android:layout_gravity="center_vertical"
                            android:text="@string/being_prepared"
                            
                            android:textColor="?attr/textWhite"
                            android:textSize="@dimen/_12sdp" />
                    
                    
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_8sdp">
                        
                        <ImageView
                            android:id="@+id/img_4"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/_8sdp"
                            app:srcCompat="@drawable/ic_cooking_time_grey" />
                        
                        <TextView
                            android:id="@+id/tv_4"
                            style="@style/mediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            
                            android:text="@string/order_prepared"
                            android:textColor="?attr/textWhite"
                            
                            android:textSize="@dimen/_12sdp" />
                    
                    
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_8sdp">
                        
                        <ImageView
                            android:id="@+id/img_5"
                            android:layout_width="24dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/_8sdp"
                            app:srcCompat="@drawable/ic_shopping_bag_grey" />
                        
                        <TextView
                            android:id="@+id/tv_5"
                            style="@style/mediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            
                            android:layout_gravity="center_vertical"
                            android:text="@string/ready_to_dispatch"
                            
                            android:textColor="?attr/textWhite"
                            android:textSize="@dimen/_12sdp" />
                    
                    
                    </LinearLayout>
                    
                    <LinearLayout
                        android:id="@+id/li_last"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_8sdp">
                        
                        <ImageView
                            android:id="@+id/img_6"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/_8sdp"
                            app:srcCompat="@drawable/ic_motorcycle_grey" />
                        
                        <TextView
                            android:id="@+id/tv_6"
                            style="@style/mediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/on_the_way"
                            
                            android:textColor="?attr/textWhite"
                            android:textSize="@dimen/_12sdp" />
                    
                    
                    </LinearLayout>
                    
                    
                    <LinearLayout
                        android:id="@+id/li_complete"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:background="@drawable/shadow28_gradient"
                        
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:visibility="gone">
                        
                        
                        <TextView
                            style="@style/mediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:maxLines="2"
                            android:text="@string/complete_order"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11sdp" />
                    
                    
                    </LinearLayout>
                    
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="?attr/viewbg" />
                    
                    
                    <TextView
                        style="@style/titleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingLeft="@dimen/_16sdp"
                        android:text="@string/bill_details"
                        android:textColor="?attr/textWhite"
                        android:textSize="@dimen/_14sdp" />
                    
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvOrderItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="?attr/chipDeSelected"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        android:paddingLeft="@dimen/_16sdp"
                        android:paddingRight="@dimen/_16sdp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="1"
                        tools:listitem="@layout/order_detail_item" />
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="?attr/viewbg" />
                    
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_16sdp"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingRight="@dimen/_16sdp">
                        
                        <TextView
                            style="@style/mediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="@string/subtotal"
                            android:textColor="?attr/textWhite"
                            android:textSize="@dimen/_10sdp" />
                        
                        <TextView
                            android:id="@+id/tv_subtotal"
                            style="@style/mediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:textColor="?attr/textGray"
                            android:textSize="@dimen/_10sdp"
                            tools:text="120" />
                    </RelativeLayout>
                    
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_16sdp"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingRight="@dimen/_16sdp">
                        
                        <TextView
                            style="@style/mediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="@string/promotion"
                            android:textColor="?attr/textWhite"
                            android:textSize="@dimen/_10sdp" />
                        
                        <TextView
                            android:id="@+id/tv_promotion"
                            style="@style/mediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/_10sdp"
                            tools:text="120" />
                    
                    
                    </RelativeLayout>
                    
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_16sdp"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingRight="@dimen/_16sdp">
                        
                        <TextView
                            style="@style/mediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="@string/delivery_fee"
                            android:textColor="?attr/textWhite"
                            android:textSize="@dimen/_10sdp" />
                        
                        <TextView
                            android:id="@+id/tv_deliveryfee"
                            style="@style/mediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:textColor="?attr/textGray"
                            android:textSize="@dimen/_10sdp"
                            tools:text="120" />
                    </RelativeLayout>
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="?attr/viewbg" />
                    
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_16sdp"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingRight="@dimen/_16sdp">
                        
                        <TextView
                            style="@style/titleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:text="@string/grand_total"
                            android:textColor="?attr/textWhite"
                            android:textSize="@dimen/_12sdp" />
                        
                        <TextView
                            android:id="@+id/tv_total"
                            style="@style/mediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:textColor="?attr/textGray"
                            android:textSize="@dimen/_10sdp"
                            tools:text="120" />
                    </RelativeLayout>
                
                
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>
    
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    
    <data>
        
        <variable
            name="orderViewModel"
            type="com.rvtechnologies.grigora.view_model.OrderDetailsViewModel" />
    
    
    </data>
</layout>