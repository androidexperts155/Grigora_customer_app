<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    android:padding="@dimen/_8sdp">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:elevation="0dp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="0dp">
        
        <ImageView
            android:id="@+id/img_card"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/restaurant" />
    
    </androidx.cardview.widget.CardView>
    
    <TextView
        android:id="@+id/tv_amount"
        style="@style/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_toRightOf="@+id/card"
        android:text="50"
        android:textColor="?attr/textWhite"
        android:textSize="@dimen/_12sdp" />
    
    <ImageView
        android:id="@+id/img_redeem"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_toLeftOf="@+id/img_share"
        android:background="@drawable/chip_selected_bg"
        android:backgroundTint="@color/colorPrimaryDark"
        android:padding="@dimen/_6sdp"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_gift_other" />
    
    <ImageView
        android:id="@+id/img_share"
        android:layout_width="@dimen/_28sdp"
        
        android:layout_height="@dimen/_28sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/normal_rounded"
        android:padding="@dimen/_6sdp"
        android:tint="@color/colorPrimaryDark"
        app:srcCompat="@drawable/ic_share_other" />

</RelativeLayout>