<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/_8sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_white"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">
        
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/selectable_item_background"
            android:clickable="true"
            android:padding="@dimen/_4sdp"
            android:tint="@color/colorPrimaryDark"
            app:srcCompat="@drawable/ic_close" />
        
        <TextView
            style="@style/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_close"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="@string/group_orders"
            android:textColor="?attr/textWhite"
            android:textSize="@dimen/_14sdp" />
        
        <TextView
            style="@style/normalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="@string/convient_way_to_order_food"
            android:textColor="?attr/textWhite"
            android:textSize="@dimen/_10sdp" />
        
        
        <TextView
            style="@style/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_close"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/follow_steps"
            android:textColor="?attr/textWhite"
            android:textSize="@dimen/_14sdp" />
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">
            
            <ImageView
                android:paddingBottom="@dimen/_4sdp"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:background="@drawable/path"
                android:layout_marginRight="@dimen/_6sdp"
                app:srcCompat="@drawable/ic_g1" />
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical">
                
                <TextView
                    style="@style/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_close"
                    android:text="@string/start_group_order1"
                    android:textColor="?attr/textWhite"
                    android:textSize="@dimen/_12sdp" />
                
                <TextView
                    style="@style/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_close"
                    android:text="@string/choose_rest"
                    android:textColor="?attr/searchHint"
                    android:textSize="@dimen/_10sdp" />
            
            </LinearLayout>
        
        
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">
            <ImageView
                android:paddingBottom="@dimen/_4sdp"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:background="@drawable/path"
                android:layout_marginRight="@dimen/_6sdp"
                app:srcCompat="@drawable/ic_g2" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical">
                
                <TextView
                    style="@style/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_close"
                    android:text="@string/share_group_order"
                    android:textColor="?attr/textWhite"
                    android:textSize="@dimen/_12sdp" />
                
                <TextView
                    style="@style/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_close"
                    android:text="@string/easily_add"
                    android:textColor="?attr/searchHint"
                    android:textSize="@dimen/_10sdp" />
            
            </LinearLayout>
        
        
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">
            <ImageView
                android:paddingBottom="@dimen/_4sdp"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:background="@drawable/path"
                android:layout_marginRight="@dimen/_6sdp"
                app:srcCompat="@drawable/ic_g3" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical">
                
                <TextView
                    style="@style/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_close"
                    android:text="@string/enjoy_meal"
                    android:textColor="?attr/textWhite"
                    android:textSize="@dimen/_12sdp" />
                
                <TextView
                    style="@style/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_close"
                    android:text="@string/enjoy_desc"
                    android:textColor="?attr/searchHint"
                    android:textSize="@dimen/_10sdp" />
            
            </LinearLayout>
        
        
        </LinearLayout>
    
    
    </LinearLayout>
</LinearLayout>