<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="@drawable/selectable_item_background"
        android:layout_marginTop="@dimen/_8sdp"
        android:elevation="@dimen/_1sdp"
        android:orientation="vertical"
        app:cardBackgroundColor="?attr/chipDeSelected">
        
        <LinearLayout
            android:padding="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3">
            
            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/img"
                android:layout_width="0dp"
                android:layout_height="@dimen/_80sdp"
                android:layout_weight="0.8"
                
                android:scaleType="centerCrop"
                android:src="@drawable/restaurant"
                app:siRadius="@dimen/_8sdp" />
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_weight="1.4"
                
                android:gravity="center_vertical"
                android:orientation="vertical">
                
                <TextView
                    android:id="@+id/tv_name"
                    
                    style="@style/mediumText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@{searchCuisineModel.name}"
                    android:textColor="?attr/textWhite"
                    android:textSize="@dimen/_12sdp"
                    tools:text="Restaurant Name" />
                
                <TextView
                    android:id="@+id/tv_address"
                    style="@style/mediumText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/cuisine"
                    android:textColor="?attr/textGray"
                    android:textSize="@dimen/_11sdp"
                     />
                
                
                 
             </LinearLayout>
            
         </LinearLayout>
    
    </androidx.cardview.widget.CardView>
    
    <data>
        
        <variable
            name="searchCuisineModel"
            type="com.rvtechnologies.grigora.model.SearchCuisineModel" />
    </data>


</layout>