<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        
        <variable
            name="offerViewModel"
            type="com.rvtechnologies.grigora.view_model.CartNdOfferViewModel" />
    </data>
    
    <RelativeLayout
        android:id="@+id/parentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.offers.adapter.OfferFragment">
        
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark" />
        
        <TextView
            android:id="@+id/txtRestaurantName"
            style="@style/mediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:text="@string/contact_us"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />
        <ScrollView
            android:layout_width="match_parent" android:layout_marginTop="@dimen/_80sdp"  android:layout_marginRight="12dp"                  android:layout_marginLeft="12dp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_height="match_parent">
    
                <LinearLayout
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shadow"
                    android:orientation="vertical">
    
                    <EditText
                        android:id="@+id/ed_order_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:paddingLeft="10dp"
                        style="@style/normalText"
                        android:hint="@string/order_id"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:inputType="textPersonName"
                        android:textSize="@dimen/_12sdp"
                       />
    
                    <EditText
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:hint="@string/select_type"
                        style="@style/normalText"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:textSize="@dimen/_12sdp"
                        />
                    <EditText
                        android:id="@+id/ed_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:ems="10"
                        android:textSize="@dimen/_12sdp"
                        android:gravity="start"
                        android:hint="@string/description"
                        style="@style/normalText"
                        android:inputType="textPersonName"
                        android:minHeight="@dimen/_100sdp"
                         />
                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:layout_marginRight="40dp"
                        android:text="@string/submit"
                        android:textColor="@color/white"
                        style="@style/normalText"
                        android:textSize="@dimen/_12sdp"
                        android:background="@drawable/btn_rounded"/>
    
                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:textSize="@dimen/_12sdp"
                        style="@style/normalText"
                        android:gravity="center"
                        android:text="@string/or"
                        android:layout_gravity="center"
                        android:textColor="@android:color/black"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="40dp">
                        <TextView
                            android:id="@+id/tv_call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTint="@color/colorAccent"
                            android:text="Call us at : "
                            style="@style/normalText"
                            android:drawableStart="@drawable/ic_local_phone_black"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:id="@+id/tv_phno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="123456789"
                            android:layout_marginLeft="0.1dp"
                            style="@style/normalText"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_12sdp"/>
                    </LinearLayout>
    
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
    
                    <TextView
                        android:id="@+id/tv_mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/colorAccent"
                        android:drawableStart="@drawable/ic_mail"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text="Mail us at : "
                        style="@style/normalText"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp"/>
    
                    <TextView
                        android:id="@+id/tv_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0.1dp"
                        android:text="grigora@gmail.com"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp"
                        style="@style/normalText"/>
                </LinearLayout>
                </LinearLayout></ScrollView>
    </RelativeLayout>
</layout>
