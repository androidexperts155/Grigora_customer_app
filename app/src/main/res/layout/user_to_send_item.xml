<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        
        <variable
            name="userModel"
            type="com.rvtechnologies.grigora.model.SearchUserModel" />
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/wallet_history_round"
        android:clickable="true"
        android:elevation="1dp"
        android:orientation="vertical"
        android:padding="@dimen/_6sdp">
        
        
        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/img_user"
            android:layout_width="@dimen/_30sdp"
            tools:src="@drawable/user_placeholder"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="8dp"
            app:image_url="@{userModel.image}"
            app:layout_constraintBottom_toBottomOf="@+id/textView54"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_name"
            tools:srcCompat="@tools:sample/avatars" />
    
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@{userModel.name}"
            android:textColor="@color/quantum_grey"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/img_user"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Amit Kumar" />
        
        <TextView
            android:id="@+id/textView54"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_marginTop="8dp"
            android:text="@{userModel.email}"
    
            tools:text="amit@gmail.com"
            android:textColor="@color/quantum_grey"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintStart_toStartOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />
    
    
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>