<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    android:orientation="horizontal">
    
    <RelativeLayout
        android:layout_width="@dimen/_90sdp"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_meal"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_75sdp"
        android:background="?attr/viewbg"
        android:scaleType="centerCrop" />
    
        <ImageView
            android:src="@drawable/veg"
            android:layout_width="@dimen/_8sdp"
            android:layout_height="@dimen/_8sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_margin="@dimen/_6sdp"
            android:id="@+id/img_type"
            />

</RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:gravity="center_vertical"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/tv_name"
            style="@style/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:maxLines="1"
            android:text="Chicken Burger"
            android:textColor="?attr/textWhite"
            android:textSize="@dimen/_12sdp" />
        
        <TextView
            android:id="@+id/tv_desc"
            style="@style/mediumText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:maxLines="2"
            android:text="Bonne less chicken leg marineted in our spices and flame-grilled"
            android:textColor="?attr/textWhite"
            android:textSize="@dimen/_10sdp" />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp">
            
            <TextView
                android:id="@+id/tv_price"
                style="@style/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:maxLines="1"
                android:text="â‚¦ 4.00"
                android:textColor="?attr/textWhite"
                android:textSize="@dimen/_12sdp" />
            
            
            <TextView
                android:id="@+id/tv_rating"
                style="@style/mediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/ic_star_24dp"
                android:drawableTint="?attr/searchHint"
                android:text="2.5"
                android:textColor="?attr/searchHint"
                android:textSize="@dimen/_12sdp" />
        
        </RelativeLayout>
    
    </LinearLayout>

</LinearLayout>