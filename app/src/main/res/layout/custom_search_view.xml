<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/transparent">
        
        <ImageView
            android:id="@+id/open_search_button"
            
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@drawable/chip_selected_bg"
            
            android:backgroundTint="@color/viewbg"
            android:padding="@dimen/_6sdp"
            app:srcCompat="@drawable/ic_search" />
    
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/search_open_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="?attr/backgroundColor"
        android:visibility="invisible">
        
        
        <EditText
            
            android:id="@+id/search_input_text"
            style="@style/mediumText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@id/close_search_button"
            android:background="@color/transparent"
            android:textColor="?attr/textWhite"
            android:textSize="@dimen/_12sdp" />
        
        <ImageButton
            android:layout_width="@dimen/_28sdp"
            android:id="@+id/close_search_button"
    
            android:layout_height="@dimen/_28sdp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_centerVertical="true"
             android:background="@drawable/selectable_item_background"
            android:padding="@dimen/_2sdp"
            app:srcCompat="@drawable/ic_close" />
        
        <ImageView
            android:visibility="gone"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            
            android:background="@drawable/chip_selected_bg"
            android:padding="@dimen/_6sdp"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_search" />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_alignParentBottom="true"
            android:background="?attr/viewbg" />
    
    </RelativeLayout>

</FrameLayout>
