<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="?attr/backgroundColor"
    android:fitsSystemWindows="true"
    tools:context=".view.ui.restaurant_detail.RestaurantDetail">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/_8sdp">
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp"
                android:weightSum="2">
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:background="?attr/backgroundColor"
                    android:orientation="vertical">
                    
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:shimmer_auto_start="true"
                        app:shimmer_direction="left_to_right">
                        
                        <TextView
                            style="@style/titleText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/lightGray"
                            android:textSize="@dimen/_12sdp" />
                    </com.facebook.shimmer.ShimmerFrameLayout>
                    
                    
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        app:shimmer_auto_start="true"
                        app:shimmer_direction="left_to_right">
                        
                        <TextView
                            style="@style/titleText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/lightGray"
                            android:textSize="@dimen/_12sdp" />
                    </com.facebook.shimmer.ShimmerFrameLayout>
                    
                    
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:shimmer_auto_start="true"
                        app:shimmer_direction="left_to_right">
                        
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:orientation="horizontal">
                            
                            <TextView
                                style="@style/mediumText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?attr/lightGray"
                                android:ellipsize="end"
                                android:gravity="left"
                                android:maxLines="2"
                                
                                android:minLines="2"
                                
                                android:textColor="?attr/filterChipSelectedTextColor"
                                android:textSize="@dimen/_11sdp" />
                            
                            <TextView
                                style="@style/normalText"
                                
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="?attr/lightGray"
                                android:textColor="?attr/filterChipSelectedTextColor"
                                android:textSize="@dimen/_12sdp" />
                        
                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>
                    
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        app:shimmer_auto_start="true"
                        app:shimmer_direction="left_to_right">
                        
                        <TextView
                            style="@style/titleText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/lightGray"
                            android:textSize="@dimen/_12sdp" />
                    </com.facebook.shimmer.ShimmerFrameLayout>
                    
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:shimmer_auto_start="true"
                        app:shimmer_direction="left_to_right">
                        
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_cuisines"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">
                            
                            
                            <TextView
                                style="@style/titleText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:ellipsize="end"
                                android:gravity="left"
                                android:maxLines="2"
                                android:text="Closed"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>
                    
                    
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:shimmer_auto_start="true"
                        app:shimmer_direction="left_to_right">
                        
                        <TextView
                            style="@style/mediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:background="?attr/lightGray"
                            android:gravity="center"
                            android:minWidth="@dimen/_130sdp"
                            
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/_11sdp" />
                    </com.facebook.shimmer.ShimmerFrameLayout>
                
                </LinearLayout>
                
                <com.facebook.shimmer.ShimmerFrameLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_weight="0.7"
                    
                    app:shimmer_auto_start="true"
                    app:shimmer_direction="left_to_right">
                    
                    <View
                        android:layout_width="match_parent"
                        
                        android:layout_height="wrap_content"
                        android:background="?attr/lightGray"
                        android:visibility="visible" />
                
                
                </com.facebook.shimmer.ShimmerFrameLayout>
            
            
            </LinearLayout>
        
        </LinearLayout>
        
        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shimmer_auto_start="true"
            app:shimmer_direction="left_to_right">
            
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                
                android:layout_marginLeft="@dimen/_8sdp"
                
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:background="?attr/lightGray">
            
            
            </View>
        </com.facebook.shimmer.ShimmerFrameLayout>
        
        
        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shimmer_auto_start="true"
            app:shimmer_direction="left_to_right">
            
            <TextView
                style="@style/mediumText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:background="?attr/lightGray"
                android:padding="@dimen/_8sdp"
                
                android:textColor="?attr/textWhite"
                android:textSize="@dimen/_10sdp" />
        </com.facebook.shimmer.ShimmerFrameLayout>
    
    
    </LinearLayout>
</LinearLayout>
