<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        
        <variable
            name="menuItemModel"
            type="com.rvtechnologies.grigora.model.models.MenuItemModel" />
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_8sdp"
        >
        
        
        <androidx.cardview.widget.CardView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:elevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">
            
            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                
                android:src="@drawable/restaurant"
                app:image_url="@{menuItemModel.image}"
                
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.0" />
    
            <View
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_margin="@dimen/_6sdp"
                android:background="@drawable/veg" />

        </androidx.cardview.widget.CardView>
    
        <LinearLayout
            android:id="@+id/rel_detail"
            android:orientation="vertical"
            
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent">
        
            <TextView
                
                android:id="@+id/tv_name"
                style="@style/mediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                 android:text="Grilled Veg Sandwich"
                android:textColor="?attr/textWhite"
                android:textSize="@dimen/_10sdp" />
        
            <TextView
                android:layout_marginTop="@dimen/_2sdp"
    
                style="@style/normalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:text="In exclusive combos"
                android:textColor="?attr/searchHint"
                android:textSize="@dimen/_10sdp" />
        
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
    
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp">
            
                <RatingBar
                    android:id="@+id/rating"
                    style="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progressTint="@color/duskYellow"
                    android:rating="5" />
            
                <TextView
                    android:id="@+id/tv_rating"
                    style="@style/normalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_toRightOf="@+id/rating"
                    android:text="5.0"
                    android:textColor="?attr/searchHint"
                    android:textSize="@dimen/_10sdp" />
            
                <TextView
                    style="@style/normalText"
                    android:layout_marginTop="@dimen/_2sdp"
    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_rating"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:text="â‚¦ 50.09"
                    android:textColor="?attr/textWhite"
                    android:textSize="@dimen/_10sdp" />
        
        
            </RelativeLayout>
    
        </LinearLayout>
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        <LinearLayout
            android:id="@+id/li_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_rounded_corners"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/rel_detail"
            app:layout_constraintTop_toTopOf="parent">
            
            
            <include layout="@layout/plus_minus_cart" />
        
        
        </LinearLayout>
    
        
        <Button
            android:textColor="?attr/searchHint"
            android:textSize="@dimen/_8sdp"
    
            android:id="@+id/bt_add"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="16dp"
            style="@style/normalText"
            android:background="@drawable/btn_rounded_corners_more"
             android:text="@string/add"
             app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/rel_detail"
            app:layout_constraintTop_toTopOf="parent" />
        
        
        
        
      
        
        
        
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>