<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            
            <ImageView
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_180sdp"
                app:srcCompat="@drawable/ic_successful_screen" />
            
            <TextView
                android:id="@+id/tv_title"
                style="@style/mediumText"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/transfer_successfull"
                android:textColor="?attr/textWhite"
                android:textSize="@dimen/_16sdp" />
            
            <TextView
                android:id="@+id/tv_rate"
                style="@style/normalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="center"
                android:text="@string/transfer_successfull_desc"
                android:textColor="?attr/textWhite"
                android:textSize="@dimen/_10sdp" />
            
            <Button
                android:id="@+id/bt_submit"
                
                style="@style/titleText"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@id/tv_rate"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_22sdp"
                android:layout_marginEnd="@dimen/_24sdp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_rounded"
                android:clickable="true"
                android:elevation="1dp"
                android:foreground="@drawable/selectable_item_background"
                android:paddingLeft="@dimen/_22sdp"
                android:paddingRight="@dimen/_22sdp"
                android:text="@string/done"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />
        
        
        </LinearLayout>
        
        
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/stopwatch"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="ribbons.json"
            app:lottie_loop="false" />
    
    
    </RelativeLayout>
</LinearLayout>