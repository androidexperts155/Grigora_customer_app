<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/li_main"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_30sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:background="@drawable/filter_selected_bg"
    android:foreground="@drawable/selectable_item_background"
    android:clickable="true"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingTop="@dimen/_6sdp"
    android:paddingRight="@dimen/_10sdp"
    android:paddingBottom="@dimen/_6sdp">
    
    <TextView
        android:id="@+id/tv_filter_name"
        style="@style/mediumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/filterChipSelectedTextColor"
        android:textSize="@dimen/_12sdp"
        tools:text="Over 4.4" />
    
    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:background="?attr/filterChipSelectedTextColor" />
    
    <ImageView
        android:id="@+id/img_arrow"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:rotation="270"
        android:tint="?attr/filterChipSelectedTextColor"
        app:srcCompat="@drawable/ic_back_black_24dp" />

</LinearLayout>