<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_8sdp"
     app:cardBackgroundColor="@color/transparent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/tv_restaurant_name"
                style="@style/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_toLeftOf="@+id/tv_status"
                android:gravity="center_vertical"
                android:textColor="?attr/textWhite"
                android:textSize="@dimen/_12sdp"
                tools:text="Restaurant Name" />
            
            <TextView
                android:id="@+id/tv_status"
                style="@style/mediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_10sdp"
                tools:text="Pending" />
        
        
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/tv_restaurant_address"
                
                style="@style/normalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_toLeftOf="@+id/tv_people"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="?attr/searchHint"
                android:textSize="@dimen/_10sdp"
                tools:text="@tools:sample/lorem/random" />
            
            <TextView
                android:id="@+id/tv_people"
                style="@style/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="?attr/textWhite"
                android:textSize="@dimen/_10sdp"
                tools:text="Table for 4" />
        
        
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/tv_date"
                style="@style/normalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_toLeftOf="@+id/tv_time"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="?attr/textWhite"
                android:textSize="@dimen/_12sdp"
                tools:text="2020-03-08" />
            
            <TextView
                android:id="@+id/tv_time"
                style="@style/normalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="?attr/textWhite"
                android:textSize="@dimen/_12sdp"
                tools:text="08:30PM - 09:00PM" />
        
        
        </RelativeLayout>
    
    </LinearLayout>

</androidx.cardview.widget.CardView>