<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        
        <variable
            name="itemCategory"
            type="com.rvtechnologies.grigora.model.models.ItemCategory" />
    </data>
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="vertical">
        
        
        <RelativeLayout
            android:layout_width="wrap_content"
            
            android:layout_height="wrap_content"
            >
            
            <TextView
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                style="@style/mediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@{itemCategory.name}"
                android:textColor="?attr/textWhite"
                android:textSize="@dimen/_15sdp"
                tools:text="Category Name" />
            
            <TextView
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                style="@style/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/required_"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_10sdp" />
        
        
        </RelativeLayout>
        
        
        <TextView
            style="@style/mediumText"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Choose any one"
            android:textColor="?attr/textWhite"
            android:textSize="@dimen/_10sdp"
            />
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvInnerOptions"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="5"
            tools:listitem="@layout/item_inner_adon" />
        
        <View
            android:background="?attr/viewbg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"/>
    </LinearLayout>

</layout>