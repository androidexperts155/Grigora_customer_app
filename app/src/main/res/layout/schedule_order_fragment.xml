<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        
        <variable
            name="scheduleView"
            type="com.rvtechnologies.grigora.view.ui.cart.ScheduleOrder" />
        
        <variable
            name="scheduleOrderViewModel"
            type="com.rvtechnologies.grigora.view_model.ScheduleOrderViewModel" />
    </data>
    
    <ScrollView
        android:layout_width="match_parent"
        
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor"
        android:fillViewport="true">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/backgroundColor"
            android:orientation="vertical"
            tools:context=".view.ui.cart.ScheduleOrder">
            
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="?attr/viewbg" />
            
            <TextView
                style="@style/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:text="@string/place_order_for"
                android:textColorHint="?attr/textWhite"
                android:textSize="@dimen/_12sdp" />
            
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="5"
                tools:listitem="@layout/item_day" />
            
            
            <TextView
                style="@style/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                android:text="@string/select_time"
                android:textColorHint="?attr/textWhite"
                android:textSize="@dimen/_12sdp" />
        
        
        </LinearLayout>
    </ScrollView>
</layout>