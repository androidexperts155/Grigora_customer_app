<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:orientation="vertical"
    tools:context=".view.ui.profile.wallet.GiftFragment">
    
    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_16sdp"
        android:src="@drawable/gift" />
    
    <TextView
        style="@style/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:text="@string/add_points_info"
        android:textColor="?attr/textWhite"
        android:textSize="@dimen/_12sdp" />
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        android:elevation="@dimen/_1sdp"
        app:cardBackgroundColor="?attr/chipDeSelected">
        
        <RelativeLayout
            android:id="@+id/rel_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="@drawable/selectable_item_background"
            android:padding="@dimen/_8sdp">
    
    
            <EditText
                android:id="@+id/ed_search"
                style="@style/mediumText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_28sdp"
                android:layout_toLeftOf="@+id/bt_transfer"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/search_nameoremail"
                android:textColor="?attr/textWhite"
                android:textColorHint="?attr/searchHint"
                android:textSize="@dimen/_11sdp" />
            
            
            <ImageView
                android:id="@+id/bt_transfer"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:clickable="true"
                android:foreground="@drawable/selectable_item_background"
                android:padding="@dimen/_4sdp"
                android:tint="@color/colorPrimaryDark"
                app:srcCompat="@drawable/ic_search" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:elevation="1dp"
        android:orientation="vertical"
        app:cardBackgroundColor="?attr/chipDeSelected"
        app:cardCornerRadius="@dimen/_16sdp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <TextView
                
                style="@style/mediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/_8sdp"
                android:text="@string/gift_to"
                android:textColor="?attr/textWhite"
                android:textSize="@dimen/_12sdp" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="?attr/viewbg" />
    
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_users"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="6"
                tools:listitem="@layout/item_user" />
        
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>