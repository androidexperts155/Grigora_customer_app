<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        
        <variable
            name="cartItem"
            type="com.rvtechnologies.grigora.model.models.CartDetail" />
    </data>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:cardCornerRadius="0dp">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp">
            
            <RadioButton
                android:id="@+id/rd_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:buttonTint="@color/green"
                android:checked="true" />
            
            <TextView
                android:id="@+id/textView10"
                style="@style/normalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/rd_type"
                android:text="@{cartItem.itemNameToDisplay}"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/_10sdp"
                tools:text="Dish Name" />
            
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_rounded_corners"
                android:orientation="horizontal">
                
                <TextView
                    android:id="@+id/tv_minus"
                    style="@style/mediumText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_12sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:text="-"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14sdp" />
                
                <TextView
                    
                    android:id="@+id/tv_quantity"
                    style="@style/mediumText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_4sdp"
                    android:paddingRight="@dimen/_4sdp"
                    android:text="@{cartItem.quantity}"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_12sdp"
                    tools:text="0" />
                
                <TextView
                    android:id="@+id/tv_plus"
                    style="@style/mediumText"
                    android:layout_width="wrap_content"
                    
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingRight="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:text="+"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_14sdp" />
            
            
            </LinearLayout>
            
            <TextView
                android:id="@+id/textView20"
                style="@style/normalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView10"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/rd_type"
                android:text="@{cartItem.total}"
                android:textColor="@color/textGrey"
                android:textSize="@dimen/_10sdp"
                tools:text="120" />
            
            <TextView
                android:id="@+id/textView15"
                
                style="@style/normalText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView20"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/rd_type"
                android:text="@{cartItem.choicesString}"
                android:textColor="@color/textGrey"
                android:textSize="@dimen/_8sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="Choices" />
        
        </RelativeLayout>
    
    </LinearLayout>
</layout>