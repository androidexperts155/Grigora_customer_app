<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <LinearLayout
        
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/shadow"
        android:elevation="@dimen/_1sdp"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp">
                
                <ImageView
                    android:id="@+id/resImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:image_url="@{orderModel.restaurantImage}"
                    
                    app:srcCompat="@drawable/restaurant" />
            
            
            </androidx.cardview.widget.CardView>
            
            <TextView
                android:id="@+id/textView42"
                style="@style/normalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/card"
                android:text="@{orderModel.idToShow}"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/_10sdp"
                tools:text="orderid" />
            
            
            <TextView
                android:id="@+id/resName"
                style="@style/normalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView42"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_toRightOf="@+id/card"
                android:gravity="center"
                android:text="@{orderModel.restaurantName}"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/_12sdp"
                tools:text="Restaurant name" />
            
            <TextView
                android:id="@+id/deliveryAddress"
                style="@style/normalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/resName"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_toRightOf="@+id/card"
                android:text="@{orderModel.deliveryAddress}"
                android:textColor="@color/textGrey"
                android:textSize="@dimen/_10sdp"
                tools:text="Address will be here" />
        
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/grey_bg" />
        
        <TextView
            style="@style/normalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/items"
            android:textColor="@color/textGrey"
            android:textSize="@dimen/_10sdp" />
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOrderItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="5"
            tools:listitem="@layout/order_menu_item" />
        
        
        <TextView
            style="@style/normalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/orderedon"
            android:textColor="@color/textGrey"
            android:textSize="@dimen/_10sdp" />
        
        <TextView
            style="@style/normalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@{orderModel.createdAt}"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_10sdp"
            tools:text="2019-12-18 04:29:56" />
        
        <TextView
            style="@style/normalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/total2"
            android:textColor="@color/textGrey"
            android:textSize="@dimen/_10sdp" />
        
        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_marginTop="4dp"
            android:text="@{orderModel.finalPrice}"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/_12sdp"
            tools:text="0.0" />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/grey_bg" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            
            <TextView
                style="@style/normalText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/status2"
                android:textColor="@color/textGrey"
                android:textSize="@dimen/_10sdp" />
            
            <TextView
                android:id="@+id/txtStatus"
                style="@style/normalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:maxLines="2"
                android:text="@{orderModel.status.toString()}"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/_10sdp"
                android:visibility="visible" />
        </LinearLayout>
        
        <Button
            android:id="@+id/btnDetails"
            style="@style/normalText"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_rounded"
            android:text="@string/track"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone" />
        
        <Button
            android:id="@+id/btnRate"
            style="@style/normalText"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_rounded"
            android:text="@string/rate_now"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView40" />
    
    </LinearLayout>
    <data>
        
        <variable
            name="orderModel"
            type="com.rvtechnologies.grigora.model.models.OrderItemModel" />
    </data>
</layout>