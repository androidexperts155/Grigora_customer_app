<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        
        <variable
            name="wallet_view"
            type="com.rvtechnologies.grigora.view.ui.profile.wallet.SendMoneyFragment" />
        
        <variable
            name="walletViewModel"
            type="com.rvtechnologies.grigora.view_model.SendMoneyViewModel" />
    
    </data>
    
    
    <RelativeLayout
        android:id="@+id/parentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:background="@drawable/wallet_gradient" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_12sdp">
            
            <EditText
                android:id="@+id/ed_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white"
                android:padding="@dimen/_8sdp" />
        
        </LinearLayout>
        
        
        <View
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_175sdp"
            android:background="@drawable/wallet_round" />
    
    
    </RelativeLayout>
</layout>


