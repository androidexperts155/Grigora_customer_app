<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="@dimen/_8sdp"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp">
    
    <TextView
        
        android:id="@+id/tv_name"
        style="@style/mediumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:textColor="?attr/textWhite"
        android:textSize="@dimen/_12sdp"
        tools:text="Meal name" />
    
    <RatingBar
        android:id="@+id/rt_rating"
        style="@style/RatingBarToRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:progressBackgroundTint="@color/colorPrimaryAlpha"
        android:progressTint="@color/duskYellow" />
    
    <EditText
        android:id="@+id/ed_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chip_deselected_bg"
        android:gravity="top"
        android:layout_marginTop="@dimen/_4sdp"
        android:hint="@string/write_your_feedback_here"
        android:maxLines="2"
        android:minLines="2"
        android:padding="@dimen/_8sdp"
        android:textColor="?attr/textWhite"
        android:textColorHint="?attr/searchHint" />


</LinearLayout>
