<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_white_no_corner_back"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="8dp">
    
    <TextView
        android:id="@+id/tv_type"
        style="@style/normalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/textBlack"
        android:textSize="@dimen/_12sdp"
        tools:text="Home" />
    
    <TextView
        android:id="@+id/tv_location"
        style="@style/normalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/tv_check"
        android:maxLines="2"
        android:textColor="@color/textBlack"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        tools:text="At vero eos et accusamus et iusto odio dignissimos ducimus qui blanditiis praesentium voluptatum deleniti atque " />
    
    <TextView
        android:id="@+id/tv_apt_number"
        style="@style/normalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_location"
        android:layout_marginTop="4dp"
        android:maxLines="2"
        android:textColor="@color/textGrey"
        android:textSize="@dimen/_10sdp"
        tools:text="At vero eos et accusamus et iusto odio " />
    
    <ImageView
        android:id="@+id/tv_check"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_8sdp"
        android:src="@drawable/ic_check_black_24dp"
        android:tint="@color/colorPrimaryDark" />

</RelativeLayout>